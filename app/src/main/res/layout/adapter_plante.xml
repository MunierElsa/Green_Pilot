<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="8dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green">

        <ImageView
            android:id="@+id/adapter_plante_imageview"
            android:layout_width="80dp"
            tools:src="@drawable/ic_baseline_question_mark_24"
            android:layout_height="150dp">
        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:orientation="vertical">

            <TextView
                android:id="@+id/adapter_plante_name_textView"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:background="@color/green"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:textSize="22sp"></TextView>

            <TextView
                android:id="@+id/adapter_plante_firstvalue_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/green"
                android:gravity="center_vertical"
                android:paddingStart="10dp"></TextView>


            <TextView
                android:id="@+id/adapter_plante_secondvalue_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/green"
                android:gravity="center_vertical"
                android:paddingStart="10dp"></TextView>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>